{
	"name": "fun-barber",
	"description": "Simple barbershop web site.",
	"author": "Hitusss <me@hitus.me> (https://github.com/hitusss)",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hitusss/fun-barber.git"
	},
	"keywords": [
		"barber",
		"shop"
	],
	"homepage": "https://github.com/hitusss/fun-barber#readme",
	"type": "module",
	"scripts": {
		"build": "run-s build:*",
		"build:remix": "remix build --sourcemap",
		"build:server": "tsx ./other/build-server.ts",
		"dev": "remix dev -c \"node ./server/dev-server.js\" --manual",
		"format": "prettier --write .",
		"lint": "eslint .",
		"setup": "npm run build && prisma generate && prisma migrate deploy && prisma db seed",
		"start": "cross-env NODE_ENV=production node .",
		"start:mocks": "cross-env NODE_ENV=production MOCKS=true tsx .",
		"test": "vitest",
		"test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
		"pretest:e2e:run": "npm run build",
		"test:e2e:run": "cross-env E2E=true PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
		"typecheck": "tsc -b && tsc -b cypress",
		"validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build",
		"/server-build"
	],
	"dependencies": {
		"@contentful/rich-text-html-renderer": "^16.1.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.0",
		"@prisma/client": "^5.2.0",
		"@reach/menu-button": "^0.18.0",
		"@remix-run/css-bundle": "^1.19.3",
		"@remix-run/express": "^1.19.3",
		"@remix-run/node": "^1.19.3",
		"@remix-run/react": "^1.19.3",
		"@remix-run/serve": "^1.19.3",
		"@remix-run/server-runtime": "^1.19.3",
		"@vitest/coverage-v8": "^0.34.3",
		"address": "^1.2.2",
		"cachified": "^3.5.4",
		"chalk": "^5.3.0",
		"chokidar": "^3.5.3",
		"close-with-grace": "^1.2.0",
		"clsx": "^2.0.0",
		"compression": "^1.7.4",
		"dotenv": "^16.3.1",
		"execa": "^8.0.1",
		"express": "^4.18.2",
		"express-rate-limit": "^6.9.0",
		"framer-motion": "^10.16.1",
		"get-port": "^7.0.0",
		"helmet": "^7.0.0",
		"isbot": "^3.6.13",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"morgan": "^1.10.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-flat-routes": "^0.5.10",
		"source-map-support": "^0.5.21",
		"spin-delay": "^1.2.0",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.19.3",
		"@remix-run/eslint-config": "^1.19.3",
		"@testing-library/cypress": "^9.0.0",
		"@testing-library/dom": "^9.3.1",
		"@testing-library/jest-dom": "^6.1.2",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/compression": "^1.7.2",
		"@types/eslint": "^8.44.2",
		"@types/express": "^4.17.17",
		"@types/fs-extra": "^11.0.1",
		"@types/lodash": "^4.14.197",
		"@types/morgan": "^1.9.5",
		"@types/node": "^20.5.7",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@vitejs/plugin-react": "^4.0.4",
		"autoprefixer": "^10.4.15",
		"c8": "^8.0.1",
		"cookie": "^0.5.0",
		"cross-env": "^7.0.3",
