{
  "name": "fun-barber",
  "description": "Simple barbershop web site.",
  "author": "Hitusss <me@hitus.me> (https://github.com/hitusss)",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hitusss/fun-barber.git"
  },
  "keywords": [
    "barber",
    "shop"
  ],
  "homepage": "https://github.com/hitusss/fun-barber#readme",
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^16.1.1",
    "@prisma/client": "^5.2.0",
    "@reach/menu-button": "^0.18.0",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@remix-run/server-runtime": "^1.11.1",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.1",
    "isbot": "^3.6.13",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "spin-delay": "^1.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.44.2",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.28.3",
    "autoprefixer": "^10.4.15",
    "binode": "^1.0.5",
    "c8": "^8.0.1",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.17.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "happy-dom": "^10.11.0",
    "msw": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "prisma": "^5.2.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
